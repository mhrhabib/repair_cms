# Uncomment this line to define a global platform for your project
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  # Remove any Brother pod lines like:
  # pod 'BRLMPrinterKit', '~> 4.6'
  
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    # Ensure pods build for the minimum deployment target and avoid simulator arm64 issues on M1/M2 Macs
    target.build_configurations.each do |config|
      # Match minimum deployment target with project setting
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      # Exclude arm64 simulator architecture to avoid linking device-only frameworks when running on simulator
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
  # Weak-link Brother printer frameworks when building for the simulator to avoid undefined symbol errors
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      if config.build_settings['PLATFORM_NAME'] == 'iphonesimulator' || ENV['SIMULATOR_DEVICE_NAME']
        other_ldflags = config.build_settings['OTHER_LDFLAGS'] ||= '$(inherited)'
        # Add weak framework flags for common Brother frameworks (if present in vendor SDK)
        flags = ["-weak_framework BRLMPrinterKit", "-weak_framework BRPtouchNetworkManager"]
        flags.each do |f|
          unless other_ldflags.include?(f)
            config.build_settings['OTHER_LDFLAGS'] = "#{other_ldflags} #{f}"
            other_ldflags = config.build_settings['OTHER_LDFLAGS']
          end
        end
      end
    end
  end
end
